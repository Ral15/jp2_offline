{{#>  layouts/base_dashboard page_title="Captura de Estudios" which_side="sideNavPasos" }}
{{#*inline "panel-block"}}
{{#if error_message}}
  <div class="alert alert-danger">
    <span id="error_message"><strong>{{error_message}}</strong></span>
  </div>
{{/if}}
<div class="row">
<br>
<br>
<br>
<div class="col-xs-12">
  <h1>Familia</h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3>En esta sección podras agregar la información de una familia.</h3>
    </div>
  </div>
  <div class="col-xs-12 well">
    <form id="familyForm" method="post" action="/estudio/create/?estudioId={{estudioId}}" data-toggle="validator">
      <div class="row" id="input-address">
        <h4>Dirección</h4>
        <div class="form-group col-xs-3">
          <label for="street" class="control-label">Calle*</label>
          <input type="text" class="form-control" name="street" id="street" required 
          value="{{family.calle}}"> 
        </div>
        <div class="form-group col-xs-3">
          <label for="street2">Colonia*</label>
          <input type="text" class="form-control" name="street2" id="street2" required
          value="{{family.colonia}}">
        </div>
        <div class="form-group col-xs-3">
          <label for="zipCode">Código Postal*</label>
          <input type="tel" class="form-control" name="zipCode" id="zipCode" placeholder="" required maxlength="5" minlength="5" value="{{family.codigoPostal}}">
        </div>
        <div class="form-group col-xs-3">
          <label for="location">Localidad*</label>
          <select class="form-control" id="location" name="location" required>
            <option value="" {{# ifEq family.localidad "" }}selected{{/ifEq}}></option>
            <option value="Poblado Jurica" {{# ifEq family.localidad "Poblado Jurica" }}selected{{/ifEq}}>Poblado Jurica</option>
            <option value="Nabo" {{# ifEq family.localidad "Nabo" }}selected{{/ifEq}}>Nabo</option>
            <option value="Salitre" {{# ifEq family.localidad "Salitre" }}selected{{/ifEq}}>Salitre</option>
            <option value="La Campana" {{# ifEq family.localidad "La Campana" }}selected{{/ifEq}}>La Campana</option>
            <option value="Otro" {{# ifEq family.localidad "Otro" }}selected{{/ifEq}}>Otro</option>
          </select>
        </div>
        <h4>Información General</h4>
        <div class="form-group col-xs-6">
          <label for="bastards" class="control-label">Número de distintos padres*</label>
          <input type="text" class="form-control" name="bastards" id="bastards" required 
          value="{{family.bastardos}}"> 
        </div>                      
        <div class="form-group col-xs-6">
          <label for="martialStatus" class="control-label">Estado Civil*</label>
          <select class="form-control" id="martialStatus" name="martialStatus" required>
            <option value="" {{# ifEq family.estadoCivil "" }}selected{{/ifEq}}></option>
            <option value="Soltero" {{# ifEq family.estadoCivil "Soltero" }}selected{{/ifEq}}>Soltero</option>
            <option value="Viudo" {{# ifEq family.estadoCivil "Viudo" }}selected{{/ifEq}}>Viudo</option>
            <option value="Unión Libre" {{# ifEq family.estadoCivil "Unión Libre" }}selected{{/ifEq}}>Unión Libre</option>
            <option value="Casado-Civil" {{# ifEq family.estadoCivil "Casado-Civil" }}selected{{/ifEq}}>Casado-Civil</option>
            <option value="Casado-Iglesia" {{# ifEq family.estadoCivil "Casado-Iglesia" }}selected{{/ifEq}}>Casado-Iglesia</option>
            <option value="Divorciado Vuelto a Casar" {{# ifEq family.estadoCivil "Divorciado Vuelto a Casar" }}selected{{/ifEq}}>Divorciado Vuelto a Casar</option>
          </select>
        </div>
        <div class="form-group col-xs-8 col-xs-offset-2">
          <button type="submit" id="create-family" class="btn btn-primary btn-block">{{# if estudioId }}Guardar Cambios{{else}}Crear familia{{/if}}</button>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
{{/inline}}
{{#*inline "scripts-block"}}
<script src="/js/dateTime.min.js"></script>
<script src="/js/validator.min.js"> </script>
{{/inline}}

{{/ layouts/base_dashboard}}

