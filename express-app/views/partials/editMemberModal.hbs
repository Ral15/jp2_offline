<div class="modal fade" id="editMemberModal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="editModalLabel">Miembro</h4>
    </div>
    <div class="modal-body">
      {{!-- {{json this}} --}}
      <form id="incomeSection" method="post" action="/member/edit/{{this._id}}" data-toggle="validator">
        <div class="row">
          <div class="form-group col-xs-12">
            <label for="role">Rol</label>
            <input type="text" class="form-control" name="role" id="role" value="{{this.relacion}}" readonly> 
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6" id="schoolInput">
            <label for="school">Escuela*</label>
            <select class="form-control" id="school" name="school">

              {{#select this.escuela}}
                {{#each schools}}
                  <option value="{{this._id}}">{{this.nombre}}</option>
                {{/each}}
             {{/select}}
            </select>            
          </div>
          <div class="form-group col-xs-6" id="saeInput">
            <label for="sae">Matrícula*</label>
            <input type="text" class="form-control" name="sae" id="sae" value="{{this.sae}}" >       
          </div>          
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <label for="job">Oficio</label>
            <select class="form-control" id="job" name="job">
              {{#select this.oficio}}
                <option value=""/></option>
                {{#each jobs}}
                <option value="{{this._id}}">{{this.nombre}}</option>
                {{/each}}
              {{/select}}
            </select>                        
          </div>
          <div class="form-group col-xs-6">
            <label for="jobObservation">Especificación de oficio</label>
            <textarea id="jobObservation"name="jobObservation" class="form-control" rows="5">{{this.observacionOficio}}</textarea>
          </div>          
        </div>                      
        <div class="row">
          <div class="form-group col-xs-6">
            <label for="firstName">Nombres*</label>
            <input type="text" class="form-control" value="{{this.nombres}}" name="firstName" id="firstName" required>
          </div>
          <div class="form-group col-xs-6">
            <label for="lastName">Apellidos*</label>
            <input type="text" class="form-control" value="{{this.apellidos}}" name="lastName" id="lastName" required>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <label for="phone">Teléfono*</label>
            <input type="tel" id="phone" name="phone" value="{{this.telefono}}" class="form-control" required>
          </div>
          <div class="form-group col-xs-6">
            <label for="email">Correo electrónico*</label>
            <input type="email" class="form-control" value="{{this.correo}}" name="email" id="email" placeholder="eugenio@420.mx" required>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <div id="datetimepicker5">
              <label for="birthDate">Fecha de nacimiento*</label>
              <div class="input-group">
                <span class="input-group-addon add-on" id="basic-addon1">
                  <i class="glyphicon glyphicon-calendar" aria-hidden="true"></i>
                </span>
                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" data-format="yyyy-MM-dd" type="text" value="{{this.fechaNacimiento}}"  name="birthDate" id="birthDate" required>
              </div>
            </div>                                        
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <label for="academicDegree">Nivel estudios*</label>
            <select class="form-control" id="academicDegree" name="academicDegree" required>
              {{#select this.nivelEstudios}}
              <option></option>
              <option value="1_grado">Primero Primaria</option>
              <option value="2_grado">Segundo Primaria</option>
              <option value="3_grado">Tercero Primaria</option>
              <option value="4_grado">Cuarto Primaria</option>
              <option value="5_grado">Quinto Primaria</option>
              <option value="6_grado">Sexto Primaria</option>
              <option value="7_grado">Primero Secundaria</option>
              <option value="8_grado">Segundo Secundaria</option>
              <option value="9_grado">Tercero Secundaria</option>
              <option value="10_grado">Primero Prepa</option>
              <option value="11_grado">Segundo Prepa</option>
              <option value="12_grado">Tercero Prepa</option>
              <option value="universidad">Universidad</option>
              <option value="maestria">Maestría</option>
              <option value="doctorado">Doctorado</option>
              {{/select}}
            </select>
          </div>
          <div class="form-group col-xs-6">
            <label for="schoolObservation">Especificación</label>
            <textarea id="schoolObservation" name="schoolObservation" class="form-control" rows="5">{{this.observacionEscuela}}</textarea>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-6">
            <label for="sacramentos">Sacramentos que faltan</label>
            <textarea id="sacramentos" name="sacramentos" class="form-control" rows="5">{{this.sacramentos}}</textarea>
          </div>
          <div class="form-group col-xs-6">
            <label for="terapia">¿Asiste o asistío a terapia?</label>
            <textarea id="terapia" name="terapia" class="form-control" rows="5">{{this.terapia}}</textarea>
          </div>              
        </div>
        <div class="form-group">
          <button type="submit" id="submit-member-{{this._id}}" class="btn btn-primary btn-block">Guardar</button>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    </div>
  </div>
</div>
</div>