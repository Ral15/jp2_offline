<div class="row">
  <button class="btn btn-success pull-right"  id="add-income" data-toggle="modal" data-target="#createIncome"><span class="glyphicon glyphicon-plus"></span> Agregar ingreso</button>
 </div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Monto Mensual</th>
      <th>Monto</th>
      <th>Periodicidad</th>
      <th>Observaci√≥n</th>
      <th>Recibido Desde</th>
      <th>Tutor</th>
      <th>Acciones</th>
    </tr>
  </thead>


  <tbody>
    {{#each incomes }}
      <tr class="">
        <td>${{this.valorMensual}} MXN</td>
        <td>${{ this.monto }} MXN</td>
        <td>{{ this.periocidad.periodicidad }}</td>
        <td>{{ this.observacion }}</td>
        <td>{{date this.fecha }}</td>
        <td>
          {{#if this.nombreMiembro}}
            {{ this.nombreMiembro }}
          {{else}}
            Ingreso Familiar
          {{/if}}
        </td>
        <td>
           <button class="btn btn-primary btn-sm editIncome"  id="edit-income-{{this._id}}" data-incomeid="{{this._id}}" data-toggle="modal" href="#editIncomeModal-{{this._id}}"><span class="glyphicon glyphicon-pencil"></span> Editar</button>

           <button onclick="showDeleteIncome('{{this._id}}')" id="delete-income-{{this._id}}" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span> Borrar</button>
        </td>
      </tr>
      {{> editIncomeModal this }}
    {{/each}}
    
  </tbody>
</table>