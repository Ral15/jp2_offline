<div class="row">
  <button class="btn btn-primary pull-right"  id="add-income" data-toggle="modal" data-target="#createIncome"><span class="glyphicon glyphicon-plus"></span> Agregar ingreso</button>
 </div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Monto Mensual</th>
      <th>Monto</th>
      <th>Periodicidad</th>
      <th>Observaci√≥n</th>
      <th>Recibido Desde</th>
      <th>Tutor</th>
      <th>Acciones</th>
    </tr>
  </thead>


  <tbody>
    {{#each incomes }}
    <tr class="">
      <td>${{this.valorMensual}} MXN</td>
      <td>${{ this.monto }} MXN</td>
      <td>{{ this.periocidad.periodicidad }}</td>
      <td>{{ this.observacion }}</td>
      <td>{{ this.fecha }}</td>
      <td>
        {{#if this.nombreMiembro}}
          {{ this.nombreMiembro }}
        {{else}}
          Ingreso Familiar
        {{/if}}
      </td>
      <td>
        <a id="update_transaccion_{{ ingreso.transaccion.id }}" class="update_transaccion_link mouseClick btn btn-default" data-form="{% url 'captura:update_transaccion_modal' ingreso.transaccion.id %}">
          <i class="glyphicon glyphicon-pencil"></i> 
          Editar
        </a>
        &nbsp;&nbsp;
        
        <a id="delete_user_{{ user.id }}" class="delete_user_link mouseClick btn btn-danger" data-form="{% url 'administracion:users_delete_modal' user.id %}">
          <i class="glyphicon glyphicon-trash"></i> 
          Borrar
        </a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>