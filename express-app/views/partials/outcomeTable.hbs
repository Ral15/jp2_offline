<div class="row">
  <button id="add-outcome" class="btn btn-success pull-right" data-toggle="modal" data-target="#createOutcome">
    <span class="glyphicon glyphicon-plus"></span> Agregar Egreso
  </button>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Monto Mensual</th>
      <th>Monto</th>
      <th>Periodicidad</th>
      <th>Observaci√≥n</th>
      <th>Acciones</th>
    </tr>
  </thead>


  <tbody>
    {{#each outcomes}}
    <tr class="">
      <td>${{ this.valorMensual }} MXN</td>
      <td>${{ this.monto }} MXN</td>
      <td>{{ this.periocidad.periodicidad }}</td>
      <td>{{ this.observacion }}</td>

      <td>
        <a id="update_transaccion_{{ this._id }}" class="update_transaccion_link mouseClick btn btn-primary btn-sm" data-form="{% url 'captura:update_transaccion_modal' egreso.id %}">
          <i class="glyphicon glyphicon-pencil"></i> 
          Editar
        </a>
        &nbsp;&nbsp;

        <button onclick="showDeleteOutcome('{{this._id}}')" id="delete-outcome-{{this._id}}" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span> Borrar</button>

      </td>
    </tr>
    {{/each}}

  </tbody>
</table>