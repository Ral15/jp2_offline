<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
    Titulo
    </title>
    {{> head }}
  </head>
  <!-- Hello, world! -->
  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title">
                <i class="fa fa-bank"></i> 
                Instituto Juan Pablo Segundo
              </a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
          
              <div class="profile_info">
                <span>Bienvenido</span>
                <h2>Nombre Usuario</h2>
              </div>
              <div class="clearfix"></div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                {{> sideNavPasos }}
              </div>

            </div>
            <!-- /sidebar menu -->
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          {{> nav }}
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="page-content container">
            <div class="row">
            <div class="col-xs-12">
              <h1><small>Seccion {{section.numero}}:</small> {{section.nombre}}</h1>
              <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                  <h3>En esta sección podras agregar la información {{section.nombre}} de una familia.</h3>
                </div>
              </div>




            {{# each section.subsecciones}}
            <!-- {% for subseccion in data %} -->
            <div class="col-md-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>
                    <small>Subsección: </small>{{this.nombre}}
                </h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  {{#each this.preguntas }}    
                    <div id="question-container-{{this.idApi}}" class="question-container">
                      <h4>{{this.orden}}.- {{this.texto}} {{#if this.descripcion }}<small> - {{this.descripcion}}</small>{{/if}}</h4>
                      {{#if this.opcionesRespuesta}}
                        {{#each this.opcionesRespuesta }}
                          <input type="radio" name="{{../../../section.numero}}-{{../../this.numero}}-{{../this.orden}}" value="{{this.texto}}">{{this.texto}}<br>
                        {{/each}}
                      {{else}}
                        <input type="text" name="{{../../section.numero}}-{{../this.numero}}-{{this.orden}}" placeholder="No hay respuesta.">
                        <div style="padding-right: 30px;">
                            <a id="answer-for-{{this.idApi}}" class="btn btn-success add-answer pull-right" href="javascript:void(0)">
                                +
                            </a>
                        </div>
                        <br><br><br>
                      {{/if}}


                      {{!-- {{#each this.respuestas }}
                        <div class='form-container'>
                          {% if pregunta.opciones_respuesta.1 %}
                            {{ respuesta.form.eleccion }}
                          {% else %}
                              <div class="item form-group">
                                  <div class="col-xs-12 col-md-11 col-sm-11 col-lg-11">
                                      <div class="col-sm-12">
                                         <p>{{ respuesta.form.respuesta }}</p>
                                      </div>
                                  </div>
                                  <div class="col-xs-12 col-md-1 col-sm-1 col-lg-1">
                                      <a id="delete-for-{{respuesta.id}}" class="btn btn-danger delete-answer" href="javascript:void(0)">-</a>
                                  </div>
                              </div>
                              {{ field.errors }}
                          {% endif %}    
                        </div>
                      {{/each}} --}}                            
                    
                    </div>
                    <div class="divider-dashed"></div>
                  {{/each }}
                </div>
              </div>
            </div>
            {{/each }}

            <div class="row form-group">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"></div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"> 
                   {{#ifGt section.numero 1 }}
                        <button id="previous_section_button" type="submit" class="btn btn-success">
                            Anterior
                        </button>
                   {{/ifGt }}
                </div>
                <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1"></div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">   
                    <button id="next_section_button" type="submit" class="btn btn-success"> 
                        Siguiente
                    </button>
                </div>
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2"></div>
            </div>

            </div>
          </div>

          </div>
        </div>
        <!-- /page content -->
    
      </div>
    </div>
    {{> scripts }}
    <script src="/js/dateTime.min.js"></script>
    <script src="/js/validator.min.js"> </script>

    <script type="text/javascript">
    $('.add-answer').click(function() {

      var id_question = $(this).attr('id').replace(/\D/g,'');
      $.ajax({
        url : capturar_estudio_dynamic_form.url_add_answer,

        method : "POST",

        data : {"id_estudio" : capturar_estudio_dynamic_form.id_study, "id_pregunta" : id_question},

        success : function(response) {
          append_anwser(id_question, response)
        }
      });
    });
    </script>

  </body>
</html>
